<?xml version="1.0" ?>
<launch>
    <arg name="map_file" default="$(find mmw_robot)/maps/map.yaml" />
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />
    
    <node name="amcl" pkg="amcl" type="amcl" output="screen" clear_params="true" >
<!--         <remap from="scan" to="mmw_robot/laser/scan" /> -->
        <param name="odom_frame_id" value="odom" />
        <param name="odom_model_type" value="diff-corrected" />
        <param name="base_frame_id" value="robot_footprint" />
        <param name="global_frame_id" value="map" />
        <param name="initial_pose_x" value="0.0" />
        <param name="initial_pose_y" value="-2.25" />
        <param name="initial_pose_a" value="0.0" />
        
        <rosparam file="$(find mmw_robot)/config/amcl_params.yaml" command="load" />
    </node>    
    
    <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen" clear_params="true" >
<!--         <remap from="scan" to="mmw_robot/laser/scan" /> -->
        <param name="base_global_planner" value="navfn/NavfnROS" />
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS" />
        
        <rosparam file="$(find mmw_robot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find mmw_robot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find mmw_robot)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find mmw_robot)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find mmw_robot)/config/base_local_planner_params.yaml" command="load" />
    </node>
    
</launch>
